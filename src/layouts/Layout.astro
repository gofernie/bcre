---
import "../styles/global.css";
const {
  title = "BC Real Estate",
  description = "A structured guide to British Columbia real estate by region.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <div class="min-h-screen">
      <header class="border-b border-slate-200 bg-white">
        <div class="mx-auto w-full max-w-screen-xl px-6 2xl:max-w-screen-2xl py-4">
          <div class="flex items-center justify-between">
            <a href="/" class="font-semibold tracking-tight">
              BC Real Estate
            </a>

            <nav class="flex items-center gap-4 text-sm text-slate-600">
              <a class="hover:text-slate-900" href="/regions">Regions</a>
            </nav>
          </div>
        </div>
      </header>

      <main class="mx-auto w-full max-w-screen-xl px-6 2xl:max-w-screen-2xl pt-6 pb-12">
        <slot />
      </main>

      <footer class="border-t border-slate-200 bg-white">
        <div class="mx-auto w-full max-w-screen-xl px-6 2xl:max-w-screen-2xl py-6 text-sm text-slate-500">
          Â© {new Date().getFullYear()} BC Real Estate
        </div>
      </footer>
    </div>
  </body>
</html>
