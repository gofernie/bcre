---
import "../styles/global.css";
const {
  title = "BC Real Estate",
  description = "A structured guide to British Columbia real estate by region.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <div class="min-h-screen">
      <header class="border-b border-slate-200 bg-white">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-5 py-4">
          <a href="/" class="font-semibold tracking-tight">BC Real Estate</a>

          <nav class="flex items-center gap-4 text-sm text-slate-600">
            <a class="hover:text-slate-900" href="/regions">Regions</a>
          </nav>
        </div>
      </header>

      <main class="mx-auto max-w-7xl px-6 py-10">
  <slot />
</main>


      <footer class="border-t border-slate-200 bg-white">
        <div class="mx-auto max-w-6xl px-5 py-6 text-sm text-slate-500">
          Â© {new Date().getFullYear()} BC Real Estate
        </div>
      </footer>
    </div>
  </body>
</html>
