---
const { label, value, hint } = Astro.props;
---

<div
  class="
    rounded-2xl
    border border-slate-200
    bg-white
    p-6
  "
>
  <div class="text-xs font-medium text-slate-500 uppercase tracking-wide">
    {label}
  </div>

  <div class="mt-3 text-2xl font-semibold tracking-tight text-slate-900">
    {value}
  </div>

  {hint && (
    <div class="mt-2 text-xs text-slate-500">
      {hint}
    </div>
  )}
</div>
