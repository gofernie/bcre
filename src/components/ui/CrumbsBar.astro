---
type Crumb = { label: string; href: string };

const { crumbs = [], class: className = "" } = Astro.props as {
  crumbs?: Crumb[];
  class?: string;
};

const show = Array.isArray(crumbs) && crumbs.length > 1;
---

{show && (
  <div class={`mb-3 ${className}`}>
    <nav aria-label="Breadcrumb" class="min-w-0">
      <ol class="flex flex-wrap items-center gap-1 text-sm text-slate-500">
        {crumbs.map((c, i) => (
          <li class="flex min-w-0 items-center gap-1">
            {i === crumbs.length - 1 ? (
              <span class="truncate text-slate-700">{c.label}</span>
            ) : (
              <a href={c.href} class="truncate hover:text-slate-700">
                {c.label}
              </a>
            )}
            {i < crumbs.length - 1 && <span class="text-slate-300">/</span>}
          </li>
        ))}
      </ol>
    </nav>
  </div>
)}
