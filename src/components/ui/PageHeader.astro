---
const {
  title,
  lead,
} = Astro.props as {
  title: string;
  lead?: string;
};
---

<header class="mb-4">
  <h1 class="text-3xl font-semibold tracking-tight text-slate-900">
    {title}
  </h1>

  {/* accent rule */}
  <div
    class="mt-2 h-[2px] w-10 rounded-full"
    style="background: var(--accent);"
    aria-hidden="true"
  ></div>

  {lead ? (
    <p class="mt-3 max-w-2xl text-base text-slate-600">
      {lead}
    </p>
  ) : null}
</header>
