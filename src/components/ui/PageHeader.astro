---
const { title, lead } = Astro.props;
---

<header class="mt-2">
  <h1 class="text-3xl font-semibold tracking-tight text-slate-900">
    {title}
  </h1>

  {/* accent rule belongs to the H1 */}
  <div
    class="mt-2 h-[2px] w-16 rounded-full"
    style="background: var(--accent, #0ea5e9);"
  ></div>

  {lead && (
    <p class="mt-3 max-w-3xl text-slate-600">
      {lead}
    </p>
  )}
</header>
